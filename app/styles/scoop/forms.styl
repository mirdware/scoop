label
    position relative
    margin-right .5em
    cursor pointer
    em
        color $color-red-main

.btn
    background $color-main
    border 0
    border-bottom 1px solid rgba(0, 0, 0, .25)
    border-radius .5em
    box-shadow 0 1px 3px rgba(0, 0, 0, .6)
    color white
    cursor pointer
    display inline-block
    font-weight 700
    padding .5em 1em
    margin .5em 0
    position relative
    text-shadow 0 -1px 1px rgba(0, 0 , 0, .25)
    &.success
        background-color $color-green-main
        &:hover
        &:disabled
            background-color $color-green-strong
    &.error
        background-color $color-red-main
        &:hover
        &:disabled
            background-color $color-red-main
    &.warning
        background-color $color-yellow-main
        &:hover
        &:disabled
            background-color $color-yellow-strong
    &.info
        background-color $color-blue-main
        &:hover
        &:disabled
            background-color $color-blue-strong
    &:hover
    &:disabled
        background-color $color-strong
    &:disabled
        cursor not-allowed

input:read-only
    cursor not-allowed

.input
    border-radius .3em
    border solid 1px $color-border-text
    padding .5em
    padding-right 1.5em
    margin .5em 0
    vertical-align middle
    max-width 100%
    box-sizing border-box
    &:disabled
        cursor not-allowed
        background-color $color-bg-disabled

.custom-input-file
    overflow hidden
    position relative
    cursor pointer
    .input-file
        outline 0
        font-size 10000px
        border 10000px solid transparent
        opacity 0
        filter unquote("alpha(opacity=50)")
        position absolute
        right -1000px
        top -1000px
        cursor pointer
        z-index 1

.group-box
    display inline-block
    padding 0 .5em
    box-sizing border-box
    .input-box
        display block
        padding 0
        .input
            width 100%
        &.group
            display flex

.input-box
    display inline-block
    padding 0 .5em
    .icon
        vertical-align middle
        fa-icon "circle"
        visibility hidden
        font 1em FontAwesome
        margin 0 0 0 -1.1em
        width auto !important
    &.error
        alert-box "times-circle" $color-red-main
    &.success
        alert-box "check-circle" $color-green-main
    &.warning
        alert-box "exclamation-circle" $color-yellow-main
    &.group
        display inline-flex
        *
            border-radius 0
        :first-child
            border-top-left-radius .5em
            border-bottom-left-radius .5em
        .last
        :last-child
            border-top-right-radius .5em
            border-bottom-right-radius .5em
        .icon
            padding 1em 0
        .badge
            background #eee
            color #777
            padding .5em
            margin .4em 0
            border 1px solid #ddd
            vertical-align middle

.radio
.checkbox
    input[type=radio]
    input[type=checkbox]
        display none
        & + label:before
            display inline-block
            color $color-border-text
            font-family FontAwesome
            font-style normal
            font-weight normal
            line-height 1
            padding-right .5em
            width 1em
            text-align left
        &:checked + label:before
        & + label:hover:before
            color $color-check
        &:disabled + label:before
            color $color-bg-disable
    input[type=radio]
        & + label
            fa-icon "circle-o"
        &:checked + label
            fa-icon "check-circle-o"
    input[type=checkbox]
        & + label
            fa-icon "square-o"
        &:checked + label
            fa-icon "check-square-o"
    label
        padding-left 0
